#account-page.account-page
  .account-page__inner.clearfix
    .account-page__header
      %h2 Create Account
      %h5 新規アカウントの作成

    .account-page__form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .account-page__form__field
          .account-page__form__field--label
            = f.label :name
            = f.text_field :name, autofocus: true,class:"account-page__form__field--input"
        .account-page__form__field
          .account-page__form__field--label
            = f.label :email
            = f.email_field :email,class:"account-page__form__field--input"
        .account-page__form__field
          .account-page__form__field--label
            = f.label :password
            %i (英数字8文字以上)
            = f.password_field :password, autocomplete: "off",class:"account-page__form__field--input"
        .account-page__form__field
          .account-page__form__field--label
            = f.label :password_confirmation
            = f.password_field :password_confirmation, autocomplete: "off",class:"account-page__form__field--input"
        .account-page__form__field
          = f.submit "Create Account", class: 'account-page__form__field--btn'

        .sign-up
          %p アカウントをお持ちの方はこちら
          = render "devise/shared/links"
